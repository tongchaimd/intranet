extends ../layout.pug

block title
	title= buildTitle('Business Cards')
block hero
	.hero.is-dark
		.hero-body
			h1.title Business Cards
block content
	a.button.is-info(href=paths.newBusinessCard() style="margin: 6px 0;")
			span.icon
				i.fas.fa-plus
			span Add Business Card
	table.table.is-fullwidth.is-hoverable
		thead
			tr
				th Full Name
				th Company
		tbody
			each card in cardList
				tr()
					td= card.fullName.prefer(preferLang, '-')
					td= card.companyName.prefer(preferLang, '-')
		tfoot
			tr
				th Full Name
				th Company
block after-content
	include ../partials/pagination.pug
