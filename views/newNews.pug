extends ./layout.pug

block content
	.container
		form
			.field.is-horizontal
				.field-label.is-large
					label.label File
				.field-body
					.control
						.file.has-name.is-boxed.is-large
							label.file-label
								input.file-input(type="file" name="doc" onchange="onFilesSelect.call(this.parentNode, null, this.files)")
								span.file-cta
									span.file-label
										span Word(.doc[x]) file
								.file-name
									span 
		.content
			.justadiv
