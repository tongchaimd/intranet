extends ../layout.pug

block title
	title= helpers.buildTitle('Updating Profile')
block hero
	.hero.is-dark
		.hero-body
			h1.title Updating Your Profile (#{user.username})
block content
	form(action=`${paths.users(currentUser)}?_method=PATCH` method="POST")
		.field
			label.label Full Names (first of the list will be considered as the main one)
			each name in user.fullNameList
				.field
					.control
						input.input(type="text" name="fullNameList" value=name)
			.field
				.control
					input.input(type="text" name="fullNameList")
			span.button.add-input(data-input-name="fullNameList") +
		.field
			label.label Email
			.control
				input.input(type="email" name="email" value=user.email)
		.field
			label.label Info
			.control
				textarea.textarea(name="info" placeholder="Additional Information")= user.info
		.field
			label.label New Password
			.field
				.control
					input.input(type="password" name="password" placeholder="New Password! at least 4 characters")
			.field
				.control
					input.input(type="password" name="passwordConfirmation" placeholder="enter new password again")
		.field
			input.button.is-primary(type="submit")
