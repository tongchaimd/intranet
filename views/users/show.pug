extends ../layout.pug

block content
	.hero.is-primary
		.hero-body
			h1.title Profile of #{u.username}
	.section
		.content
			if u.equals(currentUser)
				a.is-size-5.has-text-weight-bold(href=paths.userEdit(u)) Edit
			h2 Full Names
			if u.fullNameList.length
				ul
					each name in u.fullNameList
						li= name
			else
				p none
			h2 email
			p= u.email

